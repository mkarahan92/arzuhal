<h2>Add a new user</h2>
<%= form_for :user, url: users_path do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :surname %><br>
      <%= f.text_field :surname %>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :Bio %><br>
      <%= f.text_area :bio %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

